<Page x:Name="MainPage1" x:Class="WPF_стройка.Windows.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <RadioButton x:Name="Buildings" Content="Работа со строениями" Style="{StaticResource RadioButtonStyle}" />
            <RadioButton x:Name="GroupBuildings" Content="Работа с группами строений" Style="{StaticResource RadioButtonStyle}" />
            <RadioButton x:Name="Companies" Content="Работа с компаниями" Style="{StaticResource RadioButtonStyle}" />
            <RadioButton x:Name="List" Content="Вывести список" Style="{StaticResource RadioButtonStyle}" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <Button Content="Выбрать"  Click="ChooseAction_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Выйти из аккаунта"  Click="ExitAction_Click" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </DockPanel>
</Page>
