<Page x:Name="MainPage1" x:Class="WPF_стройка.Windows.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <StackPanel>
        <RadioButton x:Name="Buildings" Content="Работа со строениями" Style="{StaticResource RadioButtonStyle}" Margin="10,20,0,0" />
        <RadioButton x:Name="GroupBuildings" Content="Работа с группами строений" Style="{StaticResource RadioButtonStyle}" Margin="10,10,0,0" />
        <RadioButton x:Name="Companies" Content="Работа с компаниями" Style="{StaticResource RadioButtonStyle}" Margin="10,10,0,0" />
        <RadioButton x:Name="List" Content="Вывести список" Style="{StaticResource RadioButtonStyle}" Margin="10,10,0,0" />
        <Button Content="Выбрать"  Click="ChooseAction_Click" Height="50.96" Style="{StaticResource ButtonStyle}" Margin="0,20,0,0"/>
        <Button Content="Выйти из аккаунта"  Click="ExitAction_Click" Height="50" VerticalContentAlignment="Center" Style="{StaticResource ButtonStyle}" Margin="0,20,0,10"/>
    </StackPanel>
</Page>
