<Page x:Name="Companies" x:Class="WPF_стройка.Windows.CompaniesActionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Companies">
    <StackPanel>
        <RadioButton x:Name="AddCompany" Content="Добавить компанию" Style="{StaticResource RadioButtonStyle}" Margin="10,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <RadioButton x:Name="RemoveCompany" Content="Удалить компанию" Style="{StaticResource RadioButtonStyle}" Margin="10,10,0,0" VerticalAlignment="Top" Height="18" />
        <RadioButton x:Name="UpdateCompany" Content="Обновить компанию" Style="{StaticResource RadioButtonStyle}" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <RadioButton x:Name="Back" Content="Назад" Style="{StaticResource RadioButtonStyle}" Margin="10,10,0,0" VerticalAlignment="Top" />
        <Button Content="Выбрать"  Click="ChooseAction_Click" Style="{StaticResource ButtonStyle}" Margin="0,50,0,0" Height="51" VerticalAlignment="Top"></Button>
    </StackPanel>
</Page>
