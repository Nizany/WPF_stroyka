<Page x:Name="Companies" x:Class="WPF_стройка.Windows.CompaniesActionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Companies">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <RadioButton x:Name="AddCompany" Content="Добавить компанию" Style="{StaticResource RadioButtonStyle}" />
            <RadioButton x:Name="RemoveCompany" Content="Удалить компанию" Style="{StaticResource RadioButtonStyle}" />
            <RadioButton x:Name="UpdateCompany" Content="Обновить компанию" Style="{StaticResource RadioButtonStyle}" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <Button Content="Выбрать"  Click="ChooseAction_Click" Style="{StaticResource ButtonStyle}"></Button>
            <Button Content="Назад"  Click="Back_Click" Style="{StaticResource ButtonStyle}" />
        </StackPanel>
    </DockPanel>
</Page>
